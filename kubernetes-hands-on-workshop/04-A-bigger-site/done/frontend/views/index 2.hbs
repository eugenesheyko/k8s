<h1>{{title}}</h1>
<div class="row">
  <div class="col-xs-12">
    <a href="/edit" class="btn btn-default">Add</a>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Framework</th>
      <th>Votes</th>
    </tr>
  </thead>
  <tbody>
    {{#each frameworks}}
      <tr>
        <td>
          <a href="/edit/{{id}}">{{name}}</a>
        </td>
        <td>
          <form method="POST" action="/vote/down/{{id}}" class="form-inline">
            <input type="submit" class="btn btn-default" value="-" />
          </form>
          {{votes}}
          <form method="POST" action="/vote/up/{{id}}" class="form-inline">
            <input type="submit" class="btn btn-default" value="+" />
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
